<!-- ========================= SECTION MAIN ========================= -->
<section class="section-main bg padding-top-sm">
    <div class="container">

        <div class="row-sm">
            <div class="col-md-12">


                <!-- ================= main slide ================= -->
                <div class="owl-init slider-main owl-carousel" data-items="1" data-dots="false" data-nav="true">
                    <div class="item-slide">
                        <img src="~/images/banners/tennis.jpg">
                    </div>
                    <div class="item-slide rounded">
                        <img src="~/images/banners/tennis2.jpg">
                    </div>
                    <div class="item-slide rounded">
                        <img src="~/images/banners/balon.jpg">
                    </div>
                </div>
                <!-- ============== main slidesow .end // ============= -->

            </div> <!-- col.// -->
        </div>
    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION MAIN END// ========================= -->

<section class="padding-top-sm">
    <div class="container">

        <div id="carouselExample" class="carousel slide" data-ride="carousel" data-interval="9000">
            <div class="carousel-inner row w-100 mx-auto" role="listbox">
                @foreach (var promo in Model)
                {
                    <div class="carousel-item col-md-3  active">
                        <div class="product-grid">
                            <div class="product-image">
                                <a href="#">
                                    <img class="pic-1" src="data:image/jpeg;base64,@(Convert.ToBase64String(promo.Productos.Image))">
                                    <img class="pic-2" src="data:image/jpeg;base64,@(Convert.ToBase64String(promo.Productos.Image))">
                                </a>
                                <ul class="social">
                                    <li><a href="@Url.Action("Details", "Productos")" data-tip="Vista rápida" class="elements"><i class="fa fa-search"></i></a></li>
                                    <li><a href="@Url.Action("Agregar", "Carrito", new {idProducto = promo.ProductoID, cantidad = 1, precio = promo.Productos.Precio, descu = promo.Descuento })" data-tip="Agregar a Carrito" class="elements"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                                <span class="product-new-label">Promoción</span>
                                <span class="product-discount-label">@promo.Descuento</span>
                            </div>
                            <div class="product-content">
                                <h3 class="title"><a href="#">@promo.Productos.NombreProducto</a></h3>
                                <div class="price">
                                    $16.00
                                    <span>$20.00</span>
                                </div>
                                <a class="add-to-cart" href="">+ Agregar a Carrito</a>
                            </div>
                        </div>
                    </div>
                }

                
                
            <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next text-faded" href="#carouselExample" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
                </div>
        </div><!-- END CAROUSEL-->
    </div>
</section>


